<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:gravity="bottom"
    android:background="@color/color_red"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img_fundo_login" />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_red_transparente_127"
        />

    <LinearLayout
        android:id="@+id/btn_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icone_perfil" />

        <TextView
            android:id="@+id/tNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textAlignment="center"
            android:text="Nome usuario"
            android:textSize="20dp"
            android:textColor="@color/color_white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/tEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="emailusuario@gmail.com"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/color_white_transparente_191"/>
    </LinearLayout>
</RelativeLayout>