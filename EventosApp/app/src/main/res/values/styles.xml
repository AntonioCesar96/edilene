<resources>

   <!-- Tema base. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Cor primária do aplicativo -->
        <item name="colorPrimary">@color/color_red</item>
        <!-- Variação escura da cor primária para a status bar e contextual app bars -->
        <item name="colorPrimaryDark">@color/color_red_dark</item>
        <!-- Cor de acentuação para as views (checkbox, textfield etc.) -->
        <item name="colorAccent">@color/accent</item>
        <!-- Cor para o efeito ripple -->
        <item name="colorControlHighlight">@color/control_highlight</item>

        <item name="colorControlActivated">@color/color_red</item>

        <!-- Action Mode Overlay -->
        <item name="windowActionModeOverlay">true</item>
        <!-- Cor da action bar de contexto (CAB) -->
        <item name="actionModeBackground">@color/color_red</item>
    </style>

    <style name="ThemeBlack" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!-- Tema PhotoView. -->
    <style name="AppThemePhotoView" parent="AppTheme">

        <!-- Cor primária do aplicativo -->
        <item name="colorPrimary">@color/black</item>
        <!-- Variação escura da cor primária para a status bar e contextual app bars -->
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <!-- Tema PhotoView. -->
    <!--<style name="AppThemePhotoView" parent="AppTheme.NoActionBar">
        &lt;!&ndash; Cor primária do aplicativo &ndash;&gt;
        <item name="colorPrimary">@color/black</item>
        &lt;!&ndash; Variação escura da cor primária para a status bar e contextual app bars &ndash;&gt;
        <item name="colorPrimaryDark">@color/black</item>
    </style>-->

    <!-- Tema base + NoActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- Tema base + NoActionBar -->
    <style name="AppTheme.NoActionBar.NavDrawer">
    </style>

    <!-- Temas para a Toolbar, ver include_toolbar.xml -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">#fff</item>
    </style>

    <style name="ToolbarColor" parent="AppTheme">
        <item name="android:textColorSecondary">#FFF</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="actionMenuTextColor">#FFF</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="colorControlHighlight">#FFF</item>
        <item name="colorAccent">#FFF</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorPrimary">@color/color_red</item>
        <item name="colorPrimaryDark">@color/color_red_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/control_highlight</item>
        <item name="colorControlActivated">@color/color_red</item>
    </style>
</resources>
